<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.heroku.mapper.UserMasterMapper" >
    <resultMap id="BaseResultMap" type="com.heroku.entity.UserMasterEntity" >
        <id column="username" property="username" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="passwd" property="passwd" jdbcType="VARCHAR" />
        <result column="tick" property="tick" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List" >
        username, name, passwd, tick
    </sql>

    <select id="getAll" resultMap="BaseResultMap"  >
        SELECT
        <include refid="Base_Column_List" />
        FROM user_master
    </select>

    <select id="getOne" parameterType="String" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM user_master
        WHERE username = #{username}
    </select>

    <insert id="insert" parameterType="com.heroku.entity.UserMasterEntity" >
        INSERT INTO
        user_master
        (<include refid="Base_Column_List" />)
        VALUES
        (#{username}, #{name}, #{passwd}, #{tick})
    </insert>

    <update id="update" parameterType="com.heroku.entity.UserMasterEntity" >
        UPDATE
        user_master
        SET
        <if test="username != null">username = #{username},</if>
        <if test="passwd != null">passwd = #{passwd},</if>
        <if test="name != null">name = #{name},</if>
        username = #{username}
        WHERE
        username = #{username}
    </update>

    <delete id="delete" parameterType="String" >
        DELETE FROM
        user_master
        WHERE
        username =#{username}
    </delete>
</mapper>